{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./node_modules/@irubey/chores-app-shared/dist/*"],
      "@api/*": ["./src/lib/api/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
}
